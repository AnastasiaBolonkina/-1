#include <ипоток>

использование пространства имен std;
int main(){
 система("chcp 65001");
 двойной a = 0, b = 0;
    char op;
    cout << "Первое число: ";
    cin >> a;
    cout << "Второе число: ";
    cin >> b;
    cout << "Желаемая операция: ";
    cin >> op;

 переключатель (op) {
 случай '-':
            cout << a << " - " << b << " = " << a - b << '\n';
 перерыв;
 кейс '+':
            cout << a << " + " << b << " = " << a + b << '\n';
 перерыв;
 случай '*':
            cout << a << " * " << b << " = " << a * b << '\n';
 перерыв;
 случай '/':
            cout << a << " / " << b << " = " << a / b << '\n';
 перерыв;
 по умолчанию:
            cout << "Некорректная операция";
    }
 возврат 0;
}
